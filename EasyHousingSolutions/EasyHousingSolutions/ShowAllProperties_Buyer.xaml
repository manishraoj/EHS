            <Button Name="btnCart" Content="Show Cart"   Click="btnCart_Click" Height="22" VerticalAlignment="Top" Margin="0,10,0,0"  />
            <Button x:Name="btnShow" Content="Show Properties
                " HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="92" Click="btnShow_Click"/>
